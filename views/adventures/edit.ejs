<% include ../partials/header %>

<div class='container'>
    <div class='row'>
        <h1 style='text-align: center'>Edit <%= adventure.name %></h1>
        <div style='width: 30%; margin: 25px auto;'>
            <form action="/adventures/<%= adventure._id %>?_method=PUT" method="POST">
                <div class='form-group'>
                    <input class='form-control' type='text' name='adventure[name]' value='<%= adventure.name %>'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='number' name='adventure[price]' value='<%= adventure.price %>' min="0.01" step="0.01">
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='adventure[image]' value='<%= adventure.image %>'>
                </div>
                 <div class='form-group'>
                    <input class='form-control' type='text' name='adventure[description]' value='<%= adventure.description %>'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
                </div>
            </form>
            <a href="/adventures">Go Back</a>
        </div>
        
    </div>
</div>

    
<% include ../partials/footer %>